<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodback"
    tools:context="com.example.deepanshuaggarwal.receiptvault.Scan">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#470A16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/layout_bg">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera"
            android:id="@+id/camscan"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Scan"

            android:layout_below="@id/camscan"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/layout_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/picture"
            android:id="@+id/select_doc"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:layout_below="@id/select_doc"
            android:layout_marginLeft="30dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/pop"
            android:id="@+id/select_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Under Construction"
            android:layout_below="@id/select_image"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>
