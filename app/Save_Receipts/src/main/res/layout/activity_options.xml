<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodback"
    tools:context="com.example.deepanshuaggarwal.receiptvault.Options">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup Frequency"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/backupfrequency"
/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/backupfrequency"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backupfrequency"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Backup"
        android:id="@+id/backup"/>

</RelativeLayout>
